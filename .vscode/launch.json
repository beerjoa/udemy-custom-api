{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nest.js Launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug",
      ],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node container",
      "remoteRoot": "/data/app",
      "port": 9229,
      "restart": true,
      "autoAttachChildProcesses": true
    },
  ]
}